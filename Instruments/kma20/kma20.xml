        <tooltip-id>kma20-mic</tooltip-id>
        <label>Microphone: %s</label>
        <property alias="../../../../params/knob"/>
        <mapping>nasal</mapping>
        <script>(arg[0] == -1) ? "COM1" : (arg[0]==1) ? "External" : "COM2"</script>
      </binding>
    </hovered>
    
  </animation>


