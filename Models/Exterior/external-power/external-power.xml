<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <path>external-power.ac</path>
    <nopreview/>

    <offsets>
        <x-m>-0.6</x-m>
        <y-m>0.042</y-m>
    </offsets>

    <animation>
        <type>select</type>
        <object-name>cablelow</object-name>
        <condition>
            <or>
                <and>
                    <not>
                        <equals>
                            <property>fdm/jsbsim/bushkit</property>
                            <value>3</value>
                        </equals>
                    </not>
                    <not>
                        <equals>
                            <property>fdm/jsbsim/bushkit</property>
                            <value>4</value>
                        </equals>
                    </not>
                    <property>controls/electric/external-power</property>
                </and>
                <property>sim/model/preload</property>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>cablehigh</object-name>
        <condition>
            <or>
                <and>
                    <or>
                        <equals>
                            <property>fdm/jsbsim/bushkit</property>
                            <value>3</value>
                        </equals>
                        <equals>
                            <property>fdm/jsbsim/bushkit</property>
                            <value>4</value>
                        </equals>
                    </or>
                    <property>controls/electric/external-power</property>
                </and>
                <property>sim/model/preload</property>
            </or>
        </condition>
    </animation>

</PropertyList>
