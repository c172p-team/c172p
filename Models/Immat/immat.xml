<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>immat.ac</path>

    <animation>
        <!-- Immatriculations -->
        <object-name>ImmatWingLeft</object-name>
        <object-name>ImmatFuselageLeft</object-name>
        <object-name>ImmatFuselageRight</object-name>

        <object-name>ImatPanel1</object-name>
        <object-name>ImatPanel2</object-name>
        <object-name>ImatPanel3</object-name>
        <object-name>ImatPanel4</object-name>
        <object-name>ImatPanel5</object-name>
        <object-name>ImatPanel6</object-name>
    </animation>
    <animation>
        <type>noshadow</type>
        <object-name>ImmatWingLeft</object-name>
        <object-name>ImmatFuselageLeft</object-name>
        <object-name>ImmatFuselageRight</object-name>
        
        <object-name>ImatPanel1</object-name>
        <object-name>ImatPanel2</object-name>
        <object-name>ImatPanel3</object-name>
        <object-name>ImatPanel4</object-name>
        <object-name>ImatPanel5</object-name>
        <object-name>ImatPanel6</object-name>
        <object-name>ImatPanelBack</object-name>
    </animation>

    <!-- Move the fuselage/wing registration objects to the right position -->
    <animation>
        <type>translate</type>
        <object-name>ImmatFuselageLeft</object-name>
        <object-name>ImmatFuselageRight</object-name>
        <property>sim/model/livery/immat/position-fuselage-offset-x</property>
        <offset-m>1.0</offset-m>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ImmatFuselageLeft</object-name>
        <object-name>ImmatFuselageRight</object-name>
        <property>sim/model/livery/immat/position-fuselage-offset-z</property>
        <offset-m>1.0</offset-m>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ImmatFuselageLeft</object-name>
        <property>sim/model/livery/immat/position-fuselage-left-offset-y</property>
        <offset-m>1.0</offset-m>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ImmatFuselageRight</object-name>
        <property>sim/model/livery/immat/position-fuselage-right-offset-y</property>
        <offset-m>1.0</offset-m>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ImmatWingLeft</object-name>
        <property>sim/model/livery/immat/position-wing-offset-x</property>
        <offset-m>1.0</offset-m>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ImmatWingLeft</object-name>
        <property>sim/model/livery/immat/position-wing-offset-y</property>
        <offset-m>1.0</offset-m>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ImmatWingLeft</object-name>
        <property>sim/model/livery/immat/position-wing-offset-z</property>
        <offset-m>1.0</offset-m>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    <animation>
        <object-name>ImmatWingLeft</object-name>
        <type>rotate</type>
        <property>sim/model/livery/immat/rotation-wing-offset-x</property>
        <center>
            <x-m> 0 </x-m>
            <y-m> 0 </y-m>
            <z-m> 0 </z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <object-name>ImmatWingLeft</object-name>
        <type>rotate</type>
        <property>sim/model/livery/immat/rotation-wing-offset-y</property>
        <center>
            <x-m> 0 </x-m>
            <y-m> 0 </y-m>
            <z-m> 0 </z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    

    <!-- Label inside the cockpit -->
    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel1</object-name>
        <property>sim/model/c172p/regnum1</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel2</object-name>
        <property>sim/model/c172p/regnum2</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel3</object-name>
        <property>sim/model/c172p/regnum3</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel4</object-name>
        <property>sim/model/c172p/regnum4</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel5</object-name>
        <property>sim/model/c172p/regnum5</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel6</object-name>
        <property>sim/model/c172p/regnum6</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ImmatFuselageLeft</object-name>
        <object-name>ImmatFuselageRight</object-name>
        <object-name>ImmatWingLeft</object-name>
        <condition>
            <property>sim/model/c172p/immat</property>
        </condition>
    </animation>

    <effect>
        <inherits-from>../Effects/interior/c172p-interior</inherits-from>
        <object-name>ImatPanel1</object-name>
        <object-name>ImatPanel2</object-name>
        <object-name>ImatPanel3</object-name>
        <object-name>ImatPanel4</object-name>
        <object-name>ImatPanel5</object-name>
        <object-name>ImatPanel6</object-name>
        <object-name>ImatPanelBack</object-name>
    </effect>

    <animation>
        <type>select</type>
        <object-name>ImatPanel1</object-name>
        <object-name>ImatPanel2</object-name>
        <object-name>ImatPanel3</object-name>
        <object-name>ImatPanel4</object-name>
        <object-name>ImatPanel5</object-name>
        <object-name>ImatPanel6</object-name>
        <object-name>ImatPanelBack</object-name>
        <condition>
            <property>sim/model/c172p/immat-on-panel</property>
        </condition>
    </animation>

</PropertyList>
