    <animation>
        <type>pick</type>
        <object-name>SENSUp</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property alias="../../../../params/sens"/>
                <step>-1</step>
                <min>-1</min>
                <max>1</max>
