                    <property>/systems/electrical/outputs/nav-lights</property>
                    <value>20.0</value>
                </greater-than>
                <not-equals>
                    <property>/sim/model/c172p/damage/right-wing</property>
                    <value>1</value>
                </not-equals>
                <not>
                    <property>/fdm/jsbsim/crash</property>
