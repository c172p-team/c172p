<system name="c172p-doors">

    <channel name="Windows">

        <switch name="doors/windowL-enabled">
           <default value="0" />
           <test logic="AND" value="1">
               /sim/current-view/internal eq 1
           </test>
           <test logic="AND" value="1">
               /sim/model/door-positions/leftDoor/position-norm gt 0
               /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
                /sim/model/door-positions/leftWindow/position-norm gt 0
                /sim/current-view/internal eq 0
           </test>
        </switch>

        <switch name="doors/windowR-enabled">
           <default value="0" />
           <test logic="AND" value="1">
                /sim/current-view/internal eq 1
           </test>
           <test logic="AND" value="1">
               /sim/model/door-positions/rightDoor/position-norm gt 0
               /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
                /sim/model/door-positions/rightWindow/position-norm gt 0
                /sim/current-view/internal eq 0
           </test>
        </switch>

    </channel>

    <channel name="Doors">

        <switch name="doors/doorL-enabled">
           <default value="0" />
           <test logic="AND" value="1">
               /sim/current-view/internal eq 1
           </test>
           <test logic="AND" value="1">
               /sim/model/door-positions/leftDoor/position-norm gt 0
               /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
                /sim/model/door-positions/leftWindow/position-norm gt 0
                /sim/current-view/internal eq 0
           </test>
        </switch>

        <switch name="doors/doorR-enabled">
           <default value="0" />
           <test logic="AND" value="1">
                /sim/current-view/internal eq 1
           </test>
           <test logic="AND" value="1">
               /sim/model/door-positions/rightDoor/position-norm gt 0
               /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
                /sim/model/door-positions/rightWindow/position-norm gt 0
                /sim/current-view/internal eq 0
           </test>
        </switch>

    </channel>

    <channel name="Vents">

        <switch name="doors/ventL-enabled">
           <default value="0" />
           <test logic="AND" value="1">
               /sim/current-view/internal eq 1
           </test>
           <test logic="AND" value="1">
               /sim/model/door-positions/leftDoor/position-norm gt 0
               /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
                /sim/model/door-positions/leftWindow/position-norm gt 0
                /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
               /sim/model/door-positions/rightDoor/position-norm gt 0
               /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
                /sim/model/door-positions/rightWindow/position-norm gt 0
                /sim/current-view/internal eq 0
           </test>
        </switch>

        <switch name="doors/ventR-enabled">
           <default value="0" />
           <test logic="AND" value="1">
                /sim/current-view/internal eq 1
           </test>
           <test logic="AND" value="1">
               /sim/model/door-positions/leftDoor/position-norm gt 0
               /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
                /sim/model/door-positions/leftWindow/position-norm gt 0
                /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
               /sim/model/door-positions/rightDoor/position-norm gt 0
               /sim/current-view/internal eq 0
           </test>
           <test logic="AND" value="1">
                /sim/model/door-positions/rightWindow/position-norm gt 0
                /sim/current-view/internal eq 0
           </test>
        </switch>

    </channel>

</system>
