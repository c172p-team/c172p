<system name="c172p sounds">

    <channel name="sounds">

        <fcs_function name="sounds/stall-horn-volume">
            <function>
                <log10>
                    <product>
                        <sum>
                            <property>aero/alpha-deg</property>
                            <value>-13.63639552</value> <!-- 85 % of max alpha -->
                            <value>0.5</value>
                        </sum>
                        <value>2.0</value>
                    </product>
                </log10>
            </function>
            <clipto>
                <min>0.0</min>
                <max>1.5</max>
            </clipto>
        </fcs_function>

        <fcs_function name="sounds/stall-horn-pitch">
            <function>
                <table>
                    <independentVar>aero/alpha-deg</independentVar>
                    <tableData>
                        13.6364    0.9
                        15.0000    0.9
                        15.0428    1.0
                        16.0000    1.0
                        16.0428    1.1
                    </tableData>
                </table>
            </function>
            <clipto>
                <min>0.9</min>
                <max>1.1</max>
            </clipto>
        </fcs_function>

    </channel>

</system>
