    <filter>
        <name>SW/CB Lighting</name>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>/systems/electrical/outputs/instrument-lights</property>
                        <value>20.0</value>
                    </greater-than>
                    <less-than>
                        <property>/systems/electrical/outputs/instrument-lights</property>
                        <value>31.5</value>
                    </less-than>
                </and>
            </condition>
            <property>/controls/lighting/swcb-norm</property>
        </input>
        <input>
            <value>0.0</value>
        </input>
        <output>
            <property>/controls/lighting/swcb</property>
        </output>
    </filter>

