<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <filter>
        <type>gain</type>
        <gain>100.0</gain>
        <input>
            <property>/systems/electrical/battery-charge-percent</property> <!-- this property ranges from 0.0 to 1.0 despite its name -->
        </input>
        <output>
            <property>/systems/electrical/battery-charge-percent-100</property>
        </output>
    </filter>
    
    <!-- ============================================================== -->
    <!-- Save state of aircraft between sessions                        -->
    <!-- ============================================================== -->
    
    <logic>
        <name>Save state of aircraft between sessions => save battery charge</name>
        <input>
            <property>/sim/model/c172p/save-state</property>
        </input>
        <output>
            <property>/systems/electrical/save-battery-charge</property>
        </output>
    </logic>
    
</PropertyList>
