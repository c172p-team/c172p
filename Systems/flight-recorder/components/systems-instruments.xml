<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <!-- ============================================================== -->
    <!-- Systems                                                        -->
    <!-- ============================================================== -->

    <signal>
        <type>float</type>
        <property type="string">/systems/vacuum/suction-inhg</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/systems/static/pressure-inhg</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/systems/pitot/measured-total-pressure-inhg</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/systems/electrical/battery-charge-percent</property>
    </signal>

    <!-- ============================================================== -->
    <!-- Instruments                                                    -->
    <!-- ============================================================== -->

    <!-- Airspeed Indicator -->
    <signal>
        <type>float</type>
        <property type="string">/fdm/jsbsim/velocities/vias-kts</property>
    </signal>

    <!-- Attitude indicator -->
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/attitude-indicator/spin</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/attitude-indicator/horizon-offset-deg</property>
    </signal>
    <signal>
        <type>bool</type>
        <property type="string">/instrumentation/attitude-indicator/caged-flag</property>
    </signal>

    <!-- Heading indicator -->
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/heading-indicator/spin</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/heading-indicator/offset-deg</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/autopilot/settings/heading-bug-deg</property>
    </signal>

    <!-- Magnetic compass -->
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/magnetic-compass/indicated-heading-deg</property>
    </signal>

    <!-- Altimeter -->
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/altimeter/setting-inhg</property>
    </signal>

    <!-- NAV1 and NAV2 -->
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/nav[0]/radials/selected-deg</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/nav[1]/radials/selected-deg</property>
    </signal>

    <!-- ADF -->
    <signal>
        <type>float</type>
        <property type="string">/instrumentation/adf[0]/rotation-deg</property>
    </signal>

    <!-- EGT -->
    <signal>
        <type>float</type>
        <property type="string">/engines/engine[0]/egt-bug-norm</property>
    </signal>

    <!-- ============================================================== -->
    <!-- Stall Horn                                                     -->
    <!-- ============================================================== -->

    <signal>
        <type>float</type>
        <property type="string">/fdm/jsbsim/sounds/stall-horn-volume-actual</property>
    </signal>
    <signal>
        <type>float</type>
        <property type="string">/fdm/jsbsim/sounds/stall-horn-pitch-actual</property>
    </signal>

</PropertyList>
