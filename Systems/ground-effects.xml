<PropertyList>

    <filter>
        <type>gain</type>
        <gain>0.3048</gain>
        <input>
            <property>/position/altitude-agl-ft</property>
        </input>
        <reference>
            <value>-0.75</value>
        </reference>
        <output>
            <property>/position/gear-agl-m</property>
        </output>
    </filter>

