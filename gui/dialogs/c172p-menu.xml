<?xml version="1.0"?>

<PropertyList>

    <default>
        <menu n="10">
            <label>Cessna C172P</label>
            <enabled type="bool">true</enabled>

            <item>
                <label>Aircraft options</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>aircraft-dialog</dialog-name>
                </binding>
            </item>

            <item>
                <label>Select livery</label>
                <binding>
                    <command>nasal</command>
                    <script>aircraft.livery.dialog.toggle()</script>
                </binding>
            </item>

            <item>
                <label>Registration</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>registration-dialog</dialog-name>
                </binding>
            </item>

			<item>
                <label>Flashlight</label>
                <binding>
                    <command>nasal</command>
                    <script>c172p.toggle_flashlight()</script>
                </binding>
            </item>

            <item>
	             <name>show-hide-yokes</name>
	             <binding>
	                 <command>property-toggle</command>
	                 <property>/sim/model/hide-yoke</property>
	             </binding>
            </item>

            <item>
                <label>Autostart</label>
                <binding>
                    <command>nasal</command>
                    <script>c172p.autostart()</script>
                </binding>
            </item>
        </menu>
    </default>

</PropertyList>
