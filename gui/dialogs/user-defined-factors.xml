<PropertyList>

    <name>user-defined-factors</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>

    <group>

        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Heat and Air User Defined Factors</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>

    </group>
	
    <hrule/>

    <group>
        <layout>vbox</layout>
        <padding>6</padding>

		<group>

		    <layout>hbox</layout>
		    <halign>justify</halign>
		    <empty><stretch>false</stretch></empty>

			<text>
				<label>Internal Air Temprature Factor:</label>
				<label>default = .04</label>
				<halign>left</halign>
			</text>
			<input>
				<name>factorinternalairtemp</name>
				<live>true</live>
				<halign>right</halign>
				<stretch>true</stretch>
				<pref-width>50</pref-width>
				<property>/environment/aircraft-effects/factorinternalairtemp</property>
				<binding>
				    <command>dialog-apply</command>
				    <object-name>factorinternalairtemp</object-name>
				</binding>
			</input>

		</group>

		<group>

		    <layout>hbox</layout>
		    <halign>justify</halign>
		    <empty><stretch>false</stretch></empty>

			<text>
				<label>Internal Surface Temprature Factor:</label>
				<label>default = .03</label>
				<halign>left</halign>
			</text>
			<input>
				<name>factorinternalsurfacetemp</name>
				<live>true</live>
				<halign>right</halign>
				<stretch>true</stretch>
				<pref-width>50</pref-width>
				<property>/environment/aircraft-effects/factorinternalsurfacetemp</property>
				<binding>
				    <command>dialog-apply</command>
				    <object-name>factorinternalsurfacetemp</object-name>
				</binding>
			</input>

		</group>

		<group>

		    <layout>hbox</layout>
		    <halign>justify</halign>
		    <empty><stretch>false</stretch></empty>

			<text>
				<label>Airflow Air Tempratue Factor:</label>
				<label>default = .03</label>
				<halign>left</halign>
			</text>
			<input>
				<name>factoroutsideairflowtemp</name>
				<live>true</live>
				<halign>right</halign>
				<stretch>true</stretch>
				<pref-width>50</pref-width>
				<property>/environment/aircraft-effects/factoroutsideairflowtemp</property>
				<binding>
				    <command>dialog-apply</command>
				    <object-name>factoroutsideairflowtemp</object-name>
				</binding>
			</input>

		</group>

		<group>

		    <layout>hbox</layout>
		    <halign>justify</halign>
		    <empty><stretch>false</stretch></empty>

			<text>
				<label>Airflow Surface Temprature Factor:</label>
				<label>default = .02</label>
				<halign>left</halign>
			</text>
			<input>
				<name>factoroutsideairflowsurfacetemp</name>
				<live>true</live>
				<halign>right</halign>
				<stretch>true</stretch>
				<pref-width>50</pref-width>
				<property>/environment/aircraft-effects/factoroutsideairflowsurfacetemp</property>
				<binding>
				    <command>dialog-apply</command>
				    <object-name>factoroutsideairflowsurfacetemp</object-name>
				</binding>
			</input>

		</group>

		<group>

		    <layout>hbox</layout>
		    <halign>justify</halign>
		    <empty><stretch>false</stretch></empty>

			<text>
				<label>Radiant Air Temprature Factor:</label>
				<label>default = .01</label>
				<halign>left</halign>
			</text>
			<input>
				<name>factorairtemprad</name>
				<live>true</live>
				<halign>right</halign>
				<stretch>true</stretch>
				<pref-width>50</pref-width>
				<property>/environment/aircraft-effects/factorairtemprad</property>
				<binding>
				    <command>dialog-apply</command>
				    <object-name>factorairtemprad</object-name>
				</binding>
			</input>

		</group>

		<group>

		    <layout>hbox</layout>
		    <halign>justify</halign>
		    <empty><stretch>false</stretch></empty>

			<text>
				<label>Radiant Dewpoint Temprature Factor:</label>
				<label>default = .01</label>
				<halign>left</halign>
			</text>
			<input>
				<name>factorairtemprad</name>
				<live>true</live>
				<halign>right</halign>
				<stretch>true</stretch>
				<pref-width>50</pref-width>
				<property>/environment/aircraft-effects/factorairtemprad</property>
				<binding>
				    <command>dialog-apply</command>
				    <object-name>factorairtemprad</object-name>
				</binding>
			</input>

		</group>

		<group>

		    <layout>hbox</layout>
		    <halign>justify</halign>
		    <empty><stretch>false</stretch></empty>

			<text>
				<label>Radiant Surface Temprature Factor:</label>
				<label>default = .01</label>
				<halign>left</halign>
			</text>
			<input>
				<name>factorsurfacetemprad</name>
				<live>true</live>
				<halign>right</halign>
				<stretch>true</stretch>
				<pref-width>50</pref-width>
				<property>/environment/aircraft-effects/factorsurfacetemprad</property>
				<binding>
				    <command>dialog-apply</command>
				    <object-name>factorsurfacetemprad</object-name>
				</binding>
			</input>

		</group>

		<group>

		    <layout>hbox</layout>
		    <halign>justify</halign>
		    <empty><stretch>false</stretch></empty>

			<text>
				<label>Internal Condenstation Factor:</label>
				<label>default = .01</label>
				<halign>left</halign>
			</text>
			<input>
				<name>factorcondensation</name>
				<live>true</live>
				<halign>right</halign>
				<stretch>true</stretch>
				<pref-width>50</pref-width>
				<property>/environment/aircraft-effects/factorcondensation</property>
				<binding>
				    <command>dialog-apply</command>
				    <object-name>factorcondensation</object-name>
				</binding>
			</input>

		</group>

		<group>

		    <layout>vbox</layout>
		    <halign>center</halign>
			<text>
				<label>Lower numbers = slower system reaction.</label>
			</text>

		</group>

		<hrule/>

		<group>

		    <layout>hbox</layout>
		    <default-padding>6</default-padding>
		    <empty><stretch>true</stretch></empty>

		    <button>
		        <legend>Close</legend>
		        <equal>true</equal>
		        <key>Esc</key>
		        <default>true</default>
		        <binding>
		            <command>dialog-close</command>
		        </binding>
		    </button>

		</group>
    </group>
</PropertyList>
