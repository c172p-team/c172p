<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<PropertyList>

  <name type="string">parked</name>

  <description>
    The plane will be in "cold-and-dark" state, that is parked and secured, with all
    equipment switched off. Preflight inspection has not be done yet.

    Start this state with --state=parked
  </description>

  <overlay>
    <environment>
      <overlay type="bool">true</overlay>
    </environment>

    <sim>
      <model>
        <c172p>
          <cockpit>
            <control-lock-placed>true</control-lock-placed>
            <control-lock-visible>true</control-lock-visible>
          </cockpit>
          <securing>
            <pitot-cover-visible>true</pitot-cover-visible>
            <cowl-plugs-visible>true</cowl-plugs-visible>
            <chock>true</chock>
            <tiedownL-visible>true</tiedownL-visible>
            <tiedownR-visible>true</tiedownR-visible>
            <tiedownT-visible>true</tiedownT-visible>
          </securing>
          <brake-parking>1</brake-parking>
          <damage>
            <left-wing>0</left-wing>
            <right-wing>0</right-wing>
          </damage>
          <control-surfaces>
            <elevator-checked type="bool">false</elevator-checked>
            <left-aileron-checked type="bool">false</left-aileron-checked>
            <right-aileron-checked type="bool">false</right-aileron-checked>
            <rudder-checked type="bool">false</rudder-checked>
          </control-surfaces>
        </c172p>
      </model>
      <presets>
        <onground>true</onground>
      </presets>
    </sim>
    <engines>
      <engine>
        <oil-service-hours>100</oil-service-hours>
        <oil-level>7.0</oil-level>
      </engine>
    </engines>
    <fdm>
      <jsbsim>      
        <engine>
          <damage-level>0</damage-level>
        </engine>
        <settings>
          <damage>0</damage>
          <damage-flag>0</damage-flag>
        </settings>
      </jsbsim>
    </fdm>
    <consumables>
      <fuel>
        <tank n="0">
          <level-gal_us>20</level-gal_us>
        </tank>
        <tank n="1">
          <level-gal_us>20</level-gal_us>
        </tank>
      </fuel>
    </consumables>
    <systems>
      <electrical>
        <battery-charge-percent>100</battery-charge-percent>
      </electrical>
    </systems>
  </overlay>
</PropertyList>
